%h1 Users

.grid_11.push_1= will_paginate
%ul.users.grid_12
  - @users.each do |user|
    %li.grid_4.omega
      .grid_1.alpha= avatar_for user, :size => 30
      .grid_2= link_to user.name, user
      .grid_1.omega
        - if !user.admin? && current_user.admin?
          |
          = link_to 'Ban', ban_user_path(user), :method => :put

.grid_11.push_1= will_paginate