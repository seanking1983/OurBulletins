=form_for(post) do |f|
  - new_record = f.object.new_record?

  = render 'shared/error_messages', :object => f.object


  .field
    = f.label :title
    %br
    = new_record ? f.text_field(:title) : post.title

  .field
    = f.label :category
    %br
    - if new_record
      = f.radio_button :category, 'Textbook'
      Book / Textbook
      = f.radio_button :category, 'Others'
      Others
    - else
      = post.category

  .field
    = f.label :description
    %br
    = f.text_area :description

  .actions
    = f.submit new_record ? "Post" : "Update"
