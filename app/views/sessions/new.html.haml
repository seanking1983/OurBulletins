
.grid_4

  %h1 Login

  = form_for(:session, :url => sessions_path) do |f|
    .field
      = f.label :email
      %br
      = f.text_field :email
    .field
      = f.label :password
      %br
      = f.password_field :password
    .field
      = f.label :remember_me
      = f.check_box :remember_me
    .action
      = f.submit "Login"
      != " New user? #{link_to 'Sign up now!', signup_path}"
  .clear