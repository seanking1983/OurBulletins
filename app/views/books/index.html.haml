=form_tag({}, :method => :get, :id => :search_option_form) do
  .form_body
    %h1.grid_6 Books

    .grid_4.right
      = render 'shared/search_form'

    .grid_2.right
      Have Offers Only?
      = check_box_tag :offers_only, 1, @offers_only

    .clear

    .grid_12
      -if @books.empty?
        %h4 No record found.
      -else
        = paginate @books

        - @books.each do |book|
          .grid_2.booklet{:class => cycle('alpha', '', '', '', '', 'omega')}
            -if book.image_link.empty?
              .image.no-cover
                %span [ no cover ]
            -else
              .image= image_tag(book.image_link, {:alt => book.title})
            .title= book.new_record? ? book.title : link_to(book.title, book, :title => book.title)
            .author= book.author
            -if book.has_listing?
              -if book.list_price
                .price.list-price= '$' + book.list_price.to_s
              .price
                = '$' + book.lowest_price.to_s

          .book-tooltip
            =render book

-#
  Find book dialog template

:javascript
  $(".booklet").tooltip({
    position: 'bottom center',
    predelay: 300,
    effect: 'slide',
    offset: [-50, 0]
  }).dynamic({ top: { direction: 'down', bounce: true, offset: [0, 0] } });;
