%h3= @book.title


.grid_2.alpha= image_tag @book.image_link

.grid_6.omega
  .author= @book.author

  %ul
    %li= "#{@book.publisher}, #{@book.publish_date}"
    %li= "Edition #{@book.edition}"
    %li= "ISBN-10 #{@book.isbn}"
    %li= "ISBN-13 #{@book.ean}"
  = button_to 'List this book', new_book_listing_path(@book), :method => :get

.clear
%br
- if @book.listings.size > 0
  %h4 Current Listings:
  =render @book.listings

-if @book.description?
  .vendor-decr
    .prefix
      Description from
      = link_to 'Amazon.com', @book.amazon_detail_url, :target => '_blank'
    .push_1!= CGI.unescapeHTML(@book.description)